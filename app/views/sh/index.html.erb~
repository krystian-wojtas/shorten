<h1>Make your url shorter</h1>

<%= form_for(@short, :url=>{:action => 'create'}) do |f| %>
  <% if @short.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@short.errors.count, "error") %> prohibited this short from being saved:</h2>

      <ul>
      <% @short.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :longer %><br />
    <%= f.text_field :longer %>
  </div>
  <div class="field">
    <%= f.label :shorter %><br />
    <%= f.text_field :shorter %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
